<div class="main">
  <div class="container">
    <div class="title">
      <div class="row">
        <img src="<%= asset_path "icon.png" %>" width="200px" height="auto" />
        <h1>Hospi Search</h1>
        <p>パッと予約で、サッと診察！</p>
      </div>
    </div>
  </div>

<div class="content2">
  <h3><%= @reservation_time.strftime("%Y/%m/%d %H:%M") %>の予約患者一覧</h3>
<div class="lists_patients">
  <table style="width: 100%;", border="1">

    <% @reservations.each do |reservation| %>
      <tr class="list1">
        <td>
          <table>
            <tr>
              <td align="left">診療科：</td>
              <td align="left"><%= reservation.department.name %></td>
            </tr>
            <tr>
              <td align="left">患者名：</td>
              <td align="left"><%= reservation.patient.family_name_kanji %> <%= reservation.patient.first_name_kanji %></td>
            </tr>
            <tr>
              <td align="left">性別：</td>
              <td align="left">
                <% if reservation.patient.gender %>
                  男
                <% else %>
                  女
                <% end %>
              </td>
            </tr>
            <tr>
              <td align="left">生年月日：</td>
              <td align="left"><%= reservation.patient.birthday.to_datetime.strftime("%Y/%m/%d") %></td>
            </tr>
          </table>
        </td>
      </tr>
    <% end %>

  </table>
  <br />
  <%= link_to '戻る', :back, class: 'btn btn-default' %>
</div>
</div>
</div>
