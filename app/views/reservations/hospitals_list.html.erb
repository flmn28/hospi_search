<div class="main">
  <div class="container">
    <div class="title">
      <div class="row">
        <img src="<%= asset_path "icon.png" %>" width="200px" height="auto" />
        <h1>Hospi Search</h1>
        <p>パッと予約で、サッと診察！</p>
      </div>
    </div>
    <div class="row">
      <div class="list_title">
        <h2><%= @reservation_time.to_datetime.strftime("%Y年%m月%d日 %H時%M分") %>にこの地域で</h2>
        <h2><%= @department.name %>を予約できる病院： <%= @hospitals.count %>件</h2>
      </div>
      <div class="lists_main">

        <table style="width: 100%;">

          <% @hospitals.each do |hospital| %>
            <tr class="list1">
              <td>
                <div class="hospital_img">
                  <img src="<%= asset_path "hospitalA.png" %>" width="256px" height="auto" />
                </div>
              </td>
              <td>
                <table>
                  <tr>
                    <td>病院名</td>
                    <td class="hospital_name"><%= hospital.name %></td>
                  </tr>
                  <tr>
                    <td>住所</td>
                    <td class="hospital_address"><%= hospital.location.prefecture %> <%= hospital.location.city %></td>
                  </tr>
                  <tr>
                    <td>評価</td>
                    <td class="hospital_points">★☆☆☆☆</td>
                  </tr>
                  <tr>
                    <td>
                      <%= link_to '詳細を見る', '', class: 'btn btn-default' %>
                      <%= link_to '予約する', confirm_path(hospital_id: hospital.id, department_id: @department.id, reservation_time: @reservation_time), class: 'btn btn-default' %>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>

            <tr class="interval">
              <td colspan="2">　</td>
            </tr>
          <% end %>

        </table>
        <button type="button" class="btn btn-default">戻る</button>
      </div>
    </div>
  </div>
</div>
