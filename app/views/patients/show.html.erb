<div class="main">
  <div class="container">
    <div class="title">
      <div class="row">
        <img src="<%= asset_path "icon.png" %>" width="200px" height="auto" />
        <h1>Hospi Search</h1>
        <p>パッと予約で、サッと診察！</p>
      </div>
    </div>
  </div>

<div class="show_main">
  <div class="content2">
  <h2><%= current_patient.family_name_kanji %><%= current_patient.first_name_kanji %>さんのマイページ</h2>

    <hr>

    <h3>あなたの情報</h3>
    <table class="table">
      <thead>
      <tr>
        <th>名前</th>
        <th>性別</th>
        <th>生年月日</th>
        <th>メールアドレス</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <th><%= current_patient.family_name_kanji %><%= current_patient.first_name_kanji %></th>
        <td><%= @gender %></td>
        <td><%= current_patient.birthday.to_datetime.strftime("%Y/%m/%d") %></td>
        <td><%= current_patient.email %></td>
      </tr>
      </tbody>
    </table>

    <hr>

    <h3>予約一覧</h3>
    <table class="table">
      <thead>
      <tr>
        <th>病院名</th>
        <th>診療科</th>
        <th>予約日時</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
        <% @reservations.each do |reservation| %>
          <tr>
            <th><%= reservation.hospital.name %></th>
            <td><%= reservation.department.name %></td>
            <td><%= reservation.reserved_time.strftime("%Y/%m/%d %H:%M") %></td>
            <td><%= link_to "この病院の詳細を見る", hospital_reviews_path(hospital_id: reservation.hospital.id), class: 'btn btn-default'%> <%= link_to "予約をキャンセルする", cancel_reservation_path(reservation_id: reservation.id), method: :delete, data: { confirm: '予約をキャンセルします。よろしいですか？' }, class: 'btn btn-default' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
</div>
